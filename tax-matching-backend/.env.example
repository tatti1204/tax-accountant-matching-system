# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://tax_matching_user:tax_matching_pass@localhost:5432/tax_matching_db?schema=public
DB_USER=tax_matching_user
DB_PASSWORD=tax_matching_pass
DB_NAME=tax_matching_db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://:redis_pass@localhost:6379
REDIS_PASSWORD=redis_pass
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@tax-matching.com
EMAIL_FROM_NAME=Tax Matching Service

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=tax-matching-uploads

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this-in-production

# API Keys
OPENAI_API_KEY=your-openai-api-key
INTERNAL_API_KEY=your-internal-api-key

# Frontend URLs
FRONTEND_URL=http://localhost:3001
PASSWORD_RESET_URL=http://localhost:3001/reset-password

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret

# Payment Configuration (Future)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret